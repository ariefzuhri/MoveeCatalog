<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CustomTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorMidnightBlue"
    android:padding="8dp">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/img_poster_favorite"
        style="@style/RoundedImageView.Poster"
        android:contentDescription="@string/cd_poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rate_favorite"
        style="@style/TextView.Caption"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorLightBlue"
        android:padding="3dp"
        android:text="@string/loading"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_poster_favorite"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextView.Caption"
        android:layout_marginTop="8dp"
        android:text="@string/loading"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_poster_favorite"
        app:layout_constraintStart_toStartOf="@+id/img_poster_favorite"
        app:layout_constraintTop_toBottomOf="@+id/img_poster_favorite" />

</androidx.constraintlayout.widget.ConstraintLayout>