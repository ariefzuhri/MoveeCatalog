<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CustomTheme"
    android:background="@color/colorMidnightBlue">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/img_photo_credit"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/cd_credit"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RoundedImageView"/>

    <TextView
        android:id="@+id/tv_name_credit"
        style="@style/TextView.Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        app:layout_constraintBottom_toTopOf="@+id/tv_role_credit"
        app:layout_constraintEnd_toEndOf="@+id/tv_role_credit"
        app:layout_constraintStart_toStartOf="@+id/tv_role_credit" />

    <TextView
        android:id="@+id/tv_role_credit"
        style="@style/TextView.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/loading"
        app:layout_constraintBottom_toBottomOf="@+id/img_photo_credit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/img_photo_credit" />
</androidx.constraintlayout.widget.ConstraintLayout>