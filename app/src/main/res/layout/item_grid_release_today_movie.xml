<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CustomTheme"
    android:background="@color/colorMidnightBlue">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/img_poster_release_today"
        android:contentDescription="@string/cd_release_today_movie"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RoundedImageView.Poster"/>

    <TextView
        android:id="@+id/tv_rate_release_today"
        style="@style/TextView.Caption"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/loading"
        android:background="@color/colorLightBlue"
        android:padding="3dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_poster_release_today"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>